<div class="issue-list">
<% issues.each do |i| %>
<div class="container clearfix">
  <div class="issue-list">
    <article class="issue clearfix">
      <div class="avatar">
        <a href="/happypeter">
          <img src=http://gravatar.com/avatar/a92785d8d68f1d1d83b008574f8b5dba.png?s=512&amp;d=retro alt="">
</a>      </div>
      <div class="body">
        <h5 class="title">
         <!--  <a href="#">Ruby 爱好者</a> -->
         <%= link_to i.title, issue_path(i) %>

        </h5>
        <a class="read-more" href="#">read</a>
        <span class="meta-data">
          <a href="/happypeter">happypeter</a>
          <%= time_ago_in_words(i.created_at) %> ago
        </span>
      </div>
      <div class="issue-comment-count">
       <i class="fa fa-comments icon-muted"></i>
             <%= link_to i.comments.count, i %>
      </div>
    </article>
  </div>
</div>
  <% end %>
  </div>